{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2017"],
    "module": "commonjs",
    "rootDir": "./src",
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/**.ts"],
  "exclude": ["node_modules"]
}
